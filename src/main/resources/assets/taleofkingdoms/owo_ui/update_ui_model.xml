<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.21/owo-ui.xsd">
    <components>
        <flow-layout direction="horizontal">
            <children>
                <flow-layout id="inner" direction="horizontal">
                    <children>
                        <texture texture="taleofkingdoms:textures/gui/menu.png" u="0" v="0" region-width="400"
                                 region-height="256" texture-width="400" texture-height="256"/>

                        <label>
                            <text>Tale of Kingdoms updates</text>
                            <color>dark-gray</color>
                            <positioning type="relative">50,15</positioning>
                        </label>

                        <!-- ===================================================================== -->
                        <!-- I don't know how to make a scroll component dynamically generate text -->
                        <!-- ===================================================================== -->

<!--                        <scroll id="scroll" direction="vertical">-->
<!--                            <sizing>-->
<!--                                <horizontal method="content"/>-->
<!--                                <vertical method="fill">50</vertical>-->
<!--                            </sizing>-->
<!--                            <positioning type="relative">50,50</positioning>-->
<!--                        </scroll>-->

                        <button id="exit-button">
                            <text translate="true">menu.taleofkingdoms.generic.exit</text>
                            <positioning type="relative">50,85</positioning>
                            <sizing>
                                <horizontal method="fixed">55</horizontal>
                                <vertical method="fixed">20</vertical>
                            </sizing>
                        </button>
                    </children>

                    <sizing>
                        <horizontal method="fixed">400</horizontal>
                        <vertical method="fixed">256</vertical>
                    </sizing>
                </flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <sizing>
                <horizontal method="fill">100</horizontal>
            </sizing>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>
