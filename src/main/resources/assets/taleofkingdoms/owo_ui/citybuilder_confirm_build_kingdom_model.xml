<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.21/owo-ui.xsd">
    <components>
        <flow-layout direction="horizontal">
            <children>
                <flow-layout id="inner" direction="horizontal">
                    <children>
                        <label id="build-confirm">
                            <text translate="true">menu.taleofkingdoms.citybuilder.build_confirm</text>
                            <color>white</color>
                            <positioning type="relative">50,45</positioning>
                        </label>

                        <label id="destroy-area">
                            <text translate="true">menu.taleofkingdoms.citybuilder.destroy</text>
                            <color>red</color>
                            <positioning type="relative">50,50</positioning>
                        </label>

                        <label id="destroy-items">
                            <text translate="true">menu.taleofkingdoms.citybuilder.destroy_items</text>
                            <color>red</color>
                            <positioning type="relative">50,55</positioning>
                        </label>
                    </children>

                    <sizing>
                        <horizontal method="fixed">400</horizontal>
                        <vertical method="fixed">256</vertical>
                    </sizing>
                </flow-layout>

            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <sizing>
                <horizontal method="fill">100</horizontal>
            </sizing>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>
